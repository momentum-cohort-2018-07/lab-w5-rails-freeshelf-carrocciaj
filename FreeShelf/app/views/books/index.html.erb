<h1>Books#index</h1>
<%= link_to "Add Book", new_book_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th>URL</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @book.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.description %></td>
      <td><%= book.url %></td>
      <td><%= link_to "Show", book_path(book) %></td>
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <td><%= link_to "Delete", book_path(book), method: :delete, data: { confirm:'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>